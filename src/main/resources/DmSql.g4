grammar DmSql;

@members {
  /**
   * Verify whether current token is a valid decimal token (which contains dot).
   * Returns true if the character that follows the token is not a digit or letter or underscore.
   *
   * For example:
   * For char stream "2.3", "2." is not a valid decimal token, because it is followed by digit '3'.
   * For char stream "2.3_", "2.3" is not a valid decimal token, because it is followed by '_'.
   * For char stream "2.3W", "2.3" is not a valid decimal token, because it is followed by 'W'.
   * For char stream "12.0D 34.E2+0.12 "  12.0D is a valid decimal token because it is folllowed
   * by a space. 34.E2 is a valid decimal token because it is followed by symbol '+'
   * which is not a digit or letter or underscore.
   */
  public boolean isValidDecimal() {
    int nextChar = _input.LA(1);
    if (nextChar >= 'A' && nextChar <= 'Z' || nextChar >= '0' && nextChar <= '9' ||
      nextChar == '_') {
      return false;
    } else {
      return true;
    }
  }
}

tokens {
    DELIMITER
}

singleStatement
    : statement EOF
    ;

multiStatement
    : (statement ';')*
    ;

statement
    : createTableHeader ('(' colTypeList ')')? tableStorage?    #createDmTable
    | COMMENT ON TABLE tableIdentifier IS tableComment          #commentTable
    | COMMENT ON COLUMN columnIdentifier IS columnComment       #commentColumn
    | CREATE INDEX columnIndex ON tableIdentifier '(' indexList ')' tableStorage?    #createIndex
    ;

createTableHeader
    : CREATE TABLE (IF NOT EXISTS)? tableIdentifier
    ;

tableStorage
    : STORAGE'(' ON userName ',' CLUSTERBTR ')'
    ;

userName
    : name=STRING
    ;

tableIdentifier
    : (db=STRING '.')? table=STRING
    ;

columnIdentifier
    : (db=STRING '.')? table=STRING ('.' columnName)
    ;

indexList
    : indexIdentifier (',' indexIdentifier)*
    ;

indexIdentifier
    : columnName (ASC | DESC)?
    ;

columnName
    : STRING
    ;

columnComment
    : description
    ;

description
    : STRING (STRING)*
    ;

columnIndex
    : STRING
    ;

dataType
    : identifier ('(' INTEGER_VALUE ((',' INTEGER_VALUE)*) ')')?  #primitiveDataType
    | identifier ('(' INTEGER_VALUE CHAR ')')?                    #primitiveDataType
    | CHAR ('(' INTEGER_VALUE ')')?                               #primitiveDataType
    ;

colTypeList
    : colType (',' colType)*
    ;

colType
    : columnName dataType autoIncrement? (notNull=NOT NULL)? (DEFAULT defaultValue)? (COMMENT columnComment)?
    | columnName dataType (DEFAULT defaultValue)? (notNull=NOT NULL)? (COMMENT columnComment)?
    | (CONSTRAINT STRING)? (NOT CLUSTER)? PRIMARY KEY'('primaryKeyList')'
    | UNIQUE'('uniqueColumnList')'
    | FULLTEXT'('fullTextColumnList')'
    | SPATIAL'('spatialColumnList')'
    | CHECK ('(' STRING operator number ')')
    | CHECK ('(' STRING operator IDENTIFIER ')')
    ;

autoIncrement
    : IDENTITY'('seed',' incr')'
    ;

seed
    : INTEGER_VALUE
    ;

incr
    : INTEGER_VALUE
    ;

primaryKeyList
    : primaryKey (',' primaryKey)*
    ;

primaryKey
    : name=STRING
    ;

uniqueColumnList
    : uniqueColumn (',' uniqueColumn)*
    ;

uniqueColumn
    : name=STRING
    ;

spatialColumnList
    : spatialColumn (',' spatialColumn)*
    ;

spatialColumn
    : name=STRING
    ;

fullTextColumnList
    : fullTextColumn (',' fullTextColumn)*
    ;

fullTextColumn
    : name=STRING
    ;

defaultValue
    : value=number|STRING|CURRENT_TIMESTAMP'()'|NULL
    ;

tableComment
    : description
    ;

identifier
    : strictIdentifier
    ;

strictIdentifier
    : IDENTIFIER             #unquotedIdentifier
    | quotedIdentifier       #quotedIdentifierAlternative
    ;

quotedIdentifier
    : BACKQUOTED_IDENTIFIER
    ;

operator
    : IS | GTE | GT | LTE | LT | NEQJ | NEQ | NSEQ
    ;

number
    : MINUS? DECIMAL_VALUE            #decimalLiteral
    | MINUS? INTEGER_VALUE            #integerLiteral
    | MINUS? BIGINT_LITERAL           #bigIntLiteral
    | MINUS? SMALLINT_LITERAL         #smallIntLiteral
    | MINUS? TINYINT_LITERAL          #tinyIntLiteral
    | MINUS? DOUBLE_LITERAL           #doubleLiteral
    | MINUS? BIGDECIMAL_LITERAL       #bigDecimalLiteral
    ;

